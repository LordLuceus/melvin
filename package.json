{
  "name": "melvin",
  "version": "2.3.2",
  "description": "An advanced RPG dice and initiative trackerr bot for Discord",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "NODE_ENV=development nodemon --watch src -e ts --exec \"npm run build && npm run start\"",
